extends ../layout
block title DreamJS Path Sandbox
prepend head
	meta(name="viewport", content="initial-scale=1; minimum-scale=1; maximum-scale=1;")
	meta(name="apple-mobile-web-app-capable", content="yes")
	
block style
	style
		html, body {
			margin: 0px;
			padding: 0;
			width: 100%;
			height: 100%;
			min-height: 100% !important;
			overflow:hidden;
		}
		
		.content {
			height: 100%;
			width: 640px;
			margin:0 auto;
			border-left: 1px solid #eee;
			border-right: 1px solid #eee;
		}
		
		#mainCanvas {
			height: 100%;
			width: 100%;
			display: block;
		}
		
		@media only screen and (device-width: 320px) {
			.content {
				width: 320px;
			}
		}
		
		@media only screen and (device-width: 640px) {
			/* rules for iPhone Retina */
			.content {
				width: 320px;
			}
		}
		
block example-script
	script(src="model.js")
	script(src="logic.js")
	script
		function initStat(){
			stats=new Stats();
			stats.getDomElement().style.position = 'absolute';
			stats.getDomElement().style.left = '0px';
			stats.getDomElement().style.top = '0px';
			document.body.appendChild(stats.getDomElement() );
			var stp=new dream.dynamic.Dynamic(function(){stats.update();});
			gameScreen.scenes.current.dynamics.add(stp).play();
		}

	